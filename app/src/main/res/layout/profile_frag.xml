<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imglogo"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:src="@drawable/layerlogo"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/tvreg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="22dp"
            android:textColor="@color/blue"
            android:layout_below="@+id/imglogo"
            android:text="My Profile"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollable"
            android:layout_below="@id/tvreg"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvgender"
                    android:text="Gender"
                    android:gravity="left"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:padding="4dp"/>
                <androidx.appcompat.widget.AppCompatSpinner
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/spinnergender"
                    android:layout_below="@+id/tvgender"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/grey"
                    />
                <Button
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnmale"
                    android:layout_below="@+id/spinnergender"
                    android:text="Male"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    />
                <Button
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnfemale"
                    android:layout_below="@+id/spinnergender"
                    android:layout_alignParentRight="true"
                    android:text="Female"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvfirstname"
                    android:text="First Name"
                    android:gravity="left"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_below="@+id/btnmale"
                    android:padding="4dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edtfirstname"
                    android:padding="10dp"
                    android:paddingLeft="2dp"
                    android:textColorHint="#424040"
                    android:background="@drawable/edt_layout"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:hint="Enter Your First Name"
                    android:textColor="@color/black"
                    android:layout_below="@+id/tvfirstname"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvlastname"
                    android:text="Last Name"
                    android:gravity="left"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_below="@+id/edtfirstname"
                    android:padding="4dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edtlastname"
                    android:padding="10dp"
                    android:paddingLeft="2dp"
                    android:textColorHint="#424040"
                    android:background="@drawable/edt_layout"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:hint="Enter Your Last Name"
                    android:textColor="@color/black"
                    android:layout_below="@+id/tvlastname"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvmobileno"
                    android:text="Mobile No"
                    android:gravity="left"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_below="@+id/edtlastname"
                    android:padding="4dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edtmobileno"
                    android:padding="10dp"
                    android:paddingLeft="2dp"
                    android:textColorHint="#424040"
                    android:background="@drawable/edt_layout"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:hint="Enter Your Mobile Number"
                    android:textColor="@color/black"
                    android:layout_below="@+id/tvmobileno"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvaddress"
                    android:text="Address"
                    android:gravity="left"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_below="@+id/edtmobileno"
                    android:padding="4dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edtaddress"
                    android:padding="10dp"
                    android:paddingLeft="2dp"
                    android:textColorHint="#424040"
                    android:background="@drawable/edt_layout"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:hint="Your Address"
                    android:textColor="@color/black"
                    android:layout_below="@+id/tvaddress"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvzipcode"
                    android:text="Post/Zip Code"
                    android:gravity="left"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_below="@+id/edtaddress"
                    android:padding="4dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edtzipcode"
                    android:padding="10dp"
                    android:paddingLeft="2dp"
                    android:textColorHint="#424040"
                    android:background="@drawable/edt_layout"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:hint="Enter Post Code no."
                    android:textColor="@color/black"
                    android:layout_below="@+id/tvzipcode"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvjoineddate"
                    android:text="Date Joined"
                    android:gravity="left"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_below="@+id/edtzipcode"
                    android:padding="4dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edtjoineddate"
                    android:padding="10dp"
                    android:paddingLeft="2dp"
                    android:textColorHint="#424040"
                    android:background="@drawable/edt_layout"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:hint="Enter Date"
                    android:textColor="@color/black"
                    android:layout_below="@+id/tvjoineddate"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvchangepass"
                    android:text="Change Password"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textColor="@color/blue"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_below="@+id/edtjoineddate"
                    android:padding="4dp"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnupdate"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Update"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/button_corner_layout"
                    android:layout_below="@+id/tvchangepass"
                    android:layout_marginBottom="20dp"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnedit"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/button_corner_layout"
                    android:layout_below="@+id/tvchangepass"
                    android:layout_marginBottom="20dp"/>
            </RelativeLayout>
        </ScrollView>
</RelativeLayout>